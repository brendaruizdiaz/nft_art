<div class="container p-4">
    <div class="row"> 
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editar/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.titulo}}" class="form-control" name="titulo" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-goup">
                            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion">{{link.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                        
                    </form>
                </div>
            </div>

        </div>
    </div> 
</div>